@model  FirstASPDotNetApp.Models.ProductModel
@{
    int x = 1;
}
<div class="container">
    <h2>Edit Product</h2>
    <div class="row">
        <div class="col-12">

            <form method="post" action="/products/edit">
                <div class="form-horizontal">
                    <input type="hidden" value="@Model.Id" name="Id"/>
                    <div class="form-group">
                        <label class="control-label">Name</label>
                        <div>
                            <input type="text" name="Name" value="@Model.Name" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Description</label>
                        <div>
                            <input type="text" name="Description" value="@Model.Description" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Category</label>
                        <div>
                            <input type="text" name="Category" value="@Model.Category" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Price</label>
                        <div>
                            <input type="text" name="Price" value="@Model.Price" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div>
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </div>

                </div>
            </form>
          
        </div>
    </div>
</div>